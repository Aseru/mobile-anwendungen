<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.hm.androidsweeper"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name=".application.App">
        <activity
            android:name=".activities.MainMenuActivity"
            android:label="@string/title_activity_main" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HighscoreActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name=".activities.GameActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name=".activities.DifficultActivity" android:theme="@style/AppTheme"></activity>
    </application>

</manifest>