<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.hm.mineandroidsweeper"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name=".activities.MainMenuActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HighscoreActivity"></activity>
        <activity android:name=".activities.GameActivity"></activity>
        <activity android:name=".activities.DifficultActivity"></activity>
    </application>

</manifest>